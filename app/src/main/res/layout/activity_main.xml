<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    tools:context="gonggongjohn.tocker.MainActivity"
    android:weightSum="1">

    <TextView
    android:text="提示：若20秒检测不到人脸将暂停番茄学习"
    android:layout_width="match_parent"
    android:textSize="13sp"
    android:textColor="#808080"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/hintfindface"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/findFace"
        android:textSize="25sp"
        android:textColor="#Ffffff"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="正在寻找人脸……"
        android:gravity="center"
        android:layout_above="@+id/iv_show_main_activity"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:id="@+id/surface_view_main_activity"
        android:layout_above="@+id/hintfindface"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />


</RelativeLayout>